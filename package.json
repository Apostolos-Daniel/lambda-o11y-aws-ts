{
  "name": "invoice_service",
  "version": "0.1.0",
  "bin": {
    "invoice_service": "bin/invoice_service.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "cdk": "cdk",
    "lint": "eslint '**/*.ts' --fix",
    "format": "prettier --write '**/*.ts'",
    "clean": "git clean -xdf",
    "tsc:verify": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run prettier",
      "npm run lint",
      "npm run test",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.124",
    "@types/jest": "^29.5.4",
    "@types/node": "20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "aws-cdk": "^2.93.0",
    "datadog-cdk-constructs-v2": "^1.8.1",
    "datadog-lambda-js": "^7.98.0",
    "dd-trace": "^4.16.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.93.0",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
